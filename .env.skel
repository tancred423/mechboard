# ===========================================
# MechBoard Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# Required fields are marked with (required)

# GitHub Repository (required)
# Format: owner/repo (e.g., username/mechboard)
GITHUB_REPOSITORY=

# ===========================================
# Database Configuration
# ===========================================
# (required) - Host where MySQL is running
# Dev Example: db
DB_HOST=

# Port for MySQL connection
DB_PORT=3306

# (required) - Database username
# Dev Example: mechboard
DB_USER=

# (required) - Database password
# Dev Example: mechboard_dev
DB_PASSWORD=

# Database name
DB_NAME=mechboard

# ===========================================
# Security
# ===========================================
# (required) - Secret key for JWT signing
# Generate with: openssl rand -hex 32
JWT_SECRET=

# ===========================================
# Discord OAuth2
# ===========================================
# Get these from https://discord.com/developers/applications
# (required for login functionality)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# (required) - Must match the redirect URI in Discord app settings
# Example: https://yourdomain.com/api/auth/discord/callback
# Dev Example: http://localhost:8000/api/auth/discord/callback
DISCORD_REDIRECT_URI=

# ===========================================
# URLs
# ===========================================
# (required) - Public URL of the frontend
# Example: https://mechboard.yourdomain.com
# Dev Example: http://localhost:5173
FRONTEND_URL=

# (required) - Public URL of the API (used by frontend)
# Example: https://mechboard.yourdomain.com/api
# Dev Example: http://localhost:8000/api
VITE_API_URL=

# (required) - Allowed CORS origins (comma-separated)
# Example: https://mechboard.yourdomain.com
# Dev Example: http://localhost:5173
CORS_ORIGINS=

# ===========================================
# Server Configuration
# ===========================================
# Port the frontend container exposes (localhost only)
# Your host nginx should proxy to this port
# Dev Example: 80
FRONTEND_PORT=8111
